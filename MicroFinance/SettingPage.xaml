<Page x:Class="MicroFinance.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicroFinance"
      mc:Ignorable="d" 
      Title="SettingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Style="{StaticResource SecondaryBtn}" Margin="5" Content="Add Expense" Width="150" x:Name="ExpenseBtn" Click="ExpenseBtn_Click"></Button>
            <Button Style="{StaticResource SecondaryBtn}" Margin="5" Content="Add Bank Name" Width="150" x:Name="BankNameBtn" Click="BankNameBtn_Click"></Button>
            <Button Style="{StaticResource SecondaryBtn}" Margin="5" Content="Add Loan Purpose" Width="150" x:Name="PurposeBtn" Click="PurposeBtn_Click"></Button>
        </StackPanel>
        <Frame Grid.Row="2" x:Name="MainFrame"></Frame>
    </Grid>
</Page>
