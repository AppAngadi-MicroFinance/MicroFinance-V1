<Page x:Class="MicroFinance.dummypage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicroFinance"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1368" Background="#FEF2E4"
      Title="dummypage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AddCustomer" Style="{StaticResource SecondaryBtn}" Content="Add Customer" Width="200" Margin="0,0,30,0" Click="AddCustomer_Click"/>
            <Button x:Name="UpdateCustomer" Style="{StaticResource SecondaryBtn}" Content="Update Pending Customer" Width="250" Click="UpdateCustomer_Click"/>
        </StackPanel>
    </Grid>
</Page>
