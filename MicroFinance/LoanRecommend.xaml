      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicroFinance"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1366"
      Title="LoanRecommend" Background="#FEF2E4">

    <Grid x:Name="mainGrid">
        <Border Height="500" Width="900" Background="White" CornerRadius="5" BorderThickness="2" BorderBrush="Gray" Panel.ZIndex="2">
            <Grid Height="490" Width="890">
