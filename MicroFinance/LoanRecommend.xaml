                                                <Button Style="{StaticResource PrimaryBtn}" Content="Recommend"></Button>
                                                <Button Style="{StaticResource GreenBtn}" Content="Retain" Margin="10,0,0,0"></Button>
                                                <Button Margin="10,0,0,0" Style="{StaticResource DangerBtn}" Content="Reject"></Button>
                                            </StackPanel>

                                        </Grid>
                                    </Border>
