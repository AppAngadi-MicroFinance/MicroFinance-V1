<Page x:Class="MicroFinance.CustomerVerified"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicroFinance"
      xmlns:convert="clr-namespace:MicroFinance.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1366"
      Title="CustomerVerified" Background="#FEF2E4">
    <Page.Resources >
        <convert:VisibilityConverter x:Key="Visible"/>
        <convert:InverseVisible x:Key="Inverse"/>
        <convert:VisiblityConverterByImage x:Key="VisibleByImage"/>
        <convert:InverseVisiblityConverterbyImage x:Key="InverseVisibleImage"/>
        <convert:StatusForegroundColor x:Key="StatusColor"/>
        <convert:StatusImage x:Key="ImageConvert"/>
        <convert:GenderFemale x:Key="Femalecheck"/>
        <convert:GenderMaleCheck x:Key="MaleCheck"/>
        <convert:AgeConverter x:Key="AgeConvert"/>

    </Page.Resources>

    <Grid x:Name="PageGrid">
        <Grid.RowDefinitions >
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Verification of Customer" Style="{StaticResource Title}" FontWeight="Medium" x:Name="PAgeBlockText" />
        </StackPanel>
        <ScrollViewer Grid.Row="1" >
            <StackPanel x:Name="MainGrid">
                <Border Visibility="Visible" Width="700" Height="auto" BorderBrush="Black" BorderThickness="1" Background="#E6DDC6" CornerRadius="7">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius=".5"/>
                    </Border.Effect>
                    <StackPanel x:Name="customerNamegrid">
                        <TextBlock Text="Customer Details" Style="{StaticResource SubTitle}" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                        <Grid Grid.Row="1"  Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Customer Name"  Grid.Column="1" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustNameError"/>
                            </StackPanel>
                            <TextBox x:Name="CustNameBox"   Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource Textbox}" Margin="0.4,0,0,0.4" >
                                <TextBox.Text>
                                    <Binding Path="CustomerName" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" />
                                </TextBox.Text>
                            </TextBox>

                            <Button x:Name="custNameVerfiedBtn" Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" Click="custNameVeriedBtn_Click" x:Name="custNameVeriedBtn"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Gender" Grid.Row="1" Grid.Column="1" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustGenderError"/>
                            </StackPanel>
                            <RadioButton Content="Male" Margin="0,10,0,0" FontWeight="Medium" x:Name="CustMale"  Grid.Column="2" IsChecked="{Binding Gender,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource MaleCheck }}">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>
                            <RadioButton Content="Female" Margin="85,10,10,0" FontWeight="Medium" x:Name="CustFemale" Grid.Column="2" IsChecked="{Binding Gender,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Femalecheck }}">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustGender,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustGender,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="GenderVerification" Click="GenderVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Date of Birth" Grid.Row="1" Grid.Column="1" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustDobError"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Column="2">
                                <DatePicker Grid.Column="2" x:Name="CustDOB" Width="120" Height="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="15,0,20,0" SelectedDate="{Binding DateofBirth,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="Age" Style="{StaticResource Regular}"/>
                                <TextBlock Text="{Binding  DateofBirth,Mode=OneWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource AgeConvert}}"  Margin="20,5,0,0"/>

                            </StackPanel>
                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustDateOfBirth,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustDateOfBirth,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustDobVeification" Click="CustDobVeification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Father Name" Grid.Row="1" Grid.Column="1" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustFatherError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding FatherName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  x:Name="CustFatherName">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustFatherName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustFatherName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustFatherVerification" Click="CustFatherVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <TextBlock Text="Mother Name" Grid.Row="1"  Style="{StaticResource Regular}"/>
                                    <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustMotherError"/>
                                </StackPanel>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding MotherName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustMotherName">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustMotherName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustMotherName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustMotherVerification" Click="CustMotherVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="185"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Husband/Guardian Name" Grid.Row="1"  Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustHusbandError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding HusbandName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustHusbandName">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustHusbandName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustHusbandName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustHusbandVerification" Click="CustHusbandVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Contact Number" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustContactError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding ContactNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustContactNo">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustContactNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustContactNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustContactVerification" Click="CustContactVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Aadhar Number" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustAadharError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding AadharNo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustAadharNo">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustAadharNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustAadharNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}"  x:Name="CustAadharVerification" Click="CustAadharVerification_Click"/>
                </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Religion" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustReligionError"/>
                            </StackPanel>
                            <ComboBox Grid.Column="2" x:Name="CustReligion"  VerticalAlignment="Center" Width="140" Style="{StaticResource combo}" HorizontalAlignment="Left"  Text="{Binding Religion,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                <ComboBoxItem Content="Hindu"/>
                                <ComboBoxItem Content="Muslim"/>
                                <ComboBoxItem Content="Christian"/>
                            </ComboBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustReligion,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustReligion,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustReligionVerification" Click="CustReligionVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Community" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustCommunityError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding Community,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustCommunity">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustCommunity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustCommunity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustCommunityVerification" Click="CustCommunityVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Caste" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustCasteError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding Caste,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustCaste"/>


                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustCaste,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustCaste,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustCasteVerification" Click="CustCasteVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Education" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustEducationError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding Education,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustEducation"/>
                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustEducation,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustEducation,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" Click="CustEducationVerification_Click" x:Name="CustEducationVerification"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Family Members" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustFamilyMembersError"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Column="2">
                                <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Width="50" HorizontalAlignment="Left" Text="{Binding FamilyMembers,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustFamilyMembers">
                                </TextBox>
                                <TextBlock Text="Earning Members" Style="{StaticResource Regular}" Margin="20,0,0,0"/>
                                <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Width="50" HorizontalAlignment="Right" Text="{Binding EarningMembers,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="30,0,0,0"/>
                            </StackPanel>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustFamilyMember,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustFamilyMember,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustFamilyMemberVerification" Click="CustFamilyMemberVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Occupation" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustOccupationError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding Occupation,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustOccupation"/>


                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustOccupation,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustOccupation,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}"  x:Name="CustOccupationVerification" Click="CustOccupationVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Monthly Income" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustmontlyIncomeError"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Column="2">
                                <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Width="80" HorizontalAlignment="Left" Text="{Binding MonthlyIncome,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustMonthlyIncome">
                                </TextBox>
                                <TextBlock Text="Monthly Expenses" Style="{StaticResource Regular}" Margin="10,0,0,0"/>
                                <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Width="80" HorizontalAlignment="Right" Text="{Binding MothlyExpenses,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0" x:Name="CustMonthlyExpense"/>
                            </StackPanel>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustMonthlyExpenses,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustMonthlyExpenses,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustMonthlyVerification" Click="CustMonthlyVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Family Yearly Income" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustYearlyIncomeError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding YearlyIncome,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustYearlyIncome">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustFamilyYearlyIncome,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustFamilyYearlyIncome,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustYearlyVerification" Click="CustYearlyVerification_Click"/>


                        </Grid>
                    </StackPanel>
                </Border>

                <Border Visibility="Visible" Width="700" Height="auto" BorderBrush="Black" BorderThickness="1" Margin="0,15,0,0" Background="#E6DDC6" CornerRadius="7">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius=".5"/>
                    </Border.Effect>
                    <StackPanel x:Name="customerAddressGrid">
                        <TextBlock Text="Customer Address Details" Style="{StaticResource SubTitle}" HorizontalAlignment="Center" Margin="0,10,0,10"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Door Number" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustDoorNoError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding DoorNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustDoorNo">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustomerDoorNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustomerDoorNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustDoorNoVerification" Click="CustDoorNoVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Street Name" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustStreetNameError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding StreetName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustStreetName">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustStreetName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustStreetName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustStreetVerification" Click="CustStreetVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <TextBlock Text="Locality/Town" Style="{StaticResource Regular}"/>
                                <TextBlock  Style="{StaticResource ErrorStar}" Visibility="Collapsed" x:Name="CustLocalityError"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource Textbox}" Grid.Column="2" Text="{Binding LocalityTown,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="CustLocality">
                            </TextBox>

                            <Button Grid.Column="4" Style="{StaticResource Verified}" Visibility="{Binding CustomerLocality,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Visible}}"/>
                            <Button Grid.Column="4" Style="{StaticResource Verify}" Visibility="{Binding CustomerLocality,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Inverse}}" x:Name="CustLocalityVerification" Click="CustLocalityVerification_Click"/>


                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
