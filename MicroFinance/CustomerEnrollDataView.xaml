            <Button Style="{StaticResource SecondaryBtn}" Margin="5" Content="Continue" x:Name="ContinueBtn" Click="ContinueBtn_Click"></Button>
            <Button Style="{StaticResource CancelBtn}" Margin="5" Content="Cancel"></Button>
        </StackPanel>
        <Border Height="430" Width="750" Background="White" Grid.Row="1" CornerRadius="8" BorderThickness="2" BorderBrush="Gray" Visibility="Collapsed" x:Name="CustomerVerifyPanel">
            <Grid Height="390" Width="590">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Customer Branch Details" Style="{StaticResource Title}" VerticalAlignment="Center"></TextBlock>
                <Separator VerticalAlignment="Bottom" BorderBrush="Gray" BorderThickness="3" Grid.ColumnSpan="2"></Separator>
                <TextBlock Text="Region Name" Grid.Row="1" Style="{StaticResource Regular}" VerticalAlignment="Bottom"></TextBlock>
                <ComboBox Grid.Row="2" Style="{StaticResource combo}" x:Name="RegionCombo" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"></ComboBox>
                <TextBlock Text="Branch Name" Grid.Row="1" Grid.Column="1" Style="{StaticResource Regular}" VerticalAlignment="Bottom"></TextBlock>
                <ComboBox Grid.Row="2" Grid.Column="1" Style="{StaticResource combo}" Width="250" HorizontalAlignment="Left" x:Name="BranchCombo">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding BranchName}"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="Center Name" Grid.Row="3" Style="{StaticResource Regular}" VerticalAlignment="Bottom"></TextBlock>
                <ComboBox Grid.Row="4" Grid.Column="0" Style="{StaticResource combo}" Width="250" HorizontalAlignment="Left" x:Name="CenterNameCombo" SelectionChanged="CenterNameCombo_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SHGName}"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="Peer Group" Style="{StaticResource Regular}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom"></TextBlock>
                <ComboBox Grid.Row="4" Grid.Column="1" Style="{StaticResource combo}" Width="250" HorizontalAlignment="Left" x:Name="PeerGroupCombo">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding GroupName}" Style="{StaticResource Regular}"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="Loan Details" Grid.Row="5" Style="{StaticResource Title}" VerticalAlignment="Center" Margin="0,10,0,0"></TextBlock>
                <Separator BorderBrush="Gray" BorderThickness="2" Grid.Row="5" Grid.ColumnSpan="2" VerticalAlignment="Bottom"></Separator>
                <TextBlock Text="Loan Type" Grid.Row="6" Style="{StaticResource Regular}" VerticalAlignment="Bottom"></TextBlock>
                <ComboBox Grid.Row="7" Style="{StaticResource combo}" Width="250" HorizontalAlignment="Left" x:Name="LoanTypeCombo">
                    <ComboBoxItem Content="Special Loan"/>
                    <ComboBoxItem Content="General Loan"/>
                </ComboBox>
                <TextBlock Text="Loan Amount" Style="{StaticResource Regular}" Grid.Row="6" Grid.Column="1" VerticalAlignment="Bottom">
                    
                </TextBlock>
                <ComboBox Grid.Row="7" Grid.Column="1" Style="{StaticResource combo}" Width="250" HorizontalAlignment="Left" x:Name="LoanAmountCombo">
                    <ComboBoxItem Content="10000"/>
                    <ComboBoxItem Content="15000"/>
                    <ComboBoxItem Content="20000"/>
                    <ComboBoxItem Content="25000"/>
                    <ComboBoxItem Content="30000"/>
                </ComboBox>
                <TextBlock Text="Loan Period" Style="{StaticResource Regular}" Grid.Row="8" VerticalAlignment="Bottom"></TextBlock>
                <ComboBox Grid.Row="9" Style="{StaticResource combo}" Width="250" HorizontalAlignment="Left" x:Name="LoanPeriodCombo">
                    <ComboBoxItem Content="25"/>
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="75"/>
                    <ComboBoxItem Content="100"/>
                </ComboBox>
                <TextBlock Text="Loan Purpose" Grid.Row="8" Grid.Column="1" Style="{StaticResource Regular}" VerticalAlignment="Bottom"></TextBlock>
                <ComboBox Grid.Row="9" Grid.Column="1" Style="{StaticResource combo}" Width="250" HorizontalAlignment="Left" x:Name="LoanPurposeCombo"></ComboBox>
                <StackPanel Grid.Row="10" Grid.Column="1" Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <Button Style="{StaticResource PrimaryBtn}" Margin="5" Content="Submit" x:Name="SubmitBtn" Click="SubmitBtn_Click"></Button>
                    <Button Style="{StaticResource CancelBtn}" Margin="5" Content="Cancel" x:Name="CancelBtn" Click="CancelBtn_Click"></Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
