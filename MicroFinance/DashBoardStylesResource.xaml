<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MicroFinance">

    <!--Main Display Text style-->
    <Style x:Key="DashboardBtnText" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="FontWeight" Value="SemiBold"></Setter>
        <Setter Property="TextWrapping" Value="Wrap"></Setter>
        <Setter Property="TextAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>

    <!--Notification batch Text style-->
    <Style x:Key="NotifyText" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="FontWeight" Value="SemiBold"></Setter>
        <Setter Property="Foreground" Value="Yellow"></Setter>
        <Setter Property="TextAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>

    <!--Notification Batch Border-->
    <Style x:Key="NotifyCount" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="50"></Setter>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
    </Style>

    <!--Dashboard Buttons main Border-->
    <Style x:Key="MainBorder" TargetType="{x:Type Border}">
        <Setter Property="Border.Background" Value="#FEF8F1"></Setter>
        <Setter Property="Border.CornerRadius" Value="5"></Setter>
        <Style.Triggers>
            <Trigger Property="Border.IsMouseOver" Value="True">
                <Setter Property="Border.Background" Value="Red"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--Add Customer Template-->
    <ControlTemplate  TargetType="{x:Type Button}" x:Key="AddCustomerTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Width="40" Height="40" Source=".\Asserts\Icons\addCustomer.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
            <TextBlock Grid.Column="1"  Width="110"  Text="Add Customer" Style="{StaticResource DashboardBtnText}"></TextBlock>
        </Grid>
    </ControlTemplate>
    <Style TargetType="{x:Type Button}" x:Key="NavigateAddCustomer">
        <Setter Property="Template" Value="{StaticResource AddCustomerTemplate}"/>
    </Style>

